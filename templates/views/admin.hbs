  <title>Admin</title>
  <style>
    body{
    width: 100%;
    }
    th,
    td {
      text-align: center;

    }

    td {
      border: 1px solid black;
    }

    /* our services style starts  */
   .row{
    margin-left: 0;
    margin-right: 0;
   }

    .service-style {
      margin-bottom: 10rem;
    }

    .box {
      position: relative;
      width: 100%;
      padding-right: 5px;
      padding-left: 5px;
      margin-right: 30px;
   
    }

    .our-services {
      margin-top: 75px;
      padding-bottom: 30px;
      padding: 0 30px;
      min-height: 198px;
      text-align: center;
      border-radius: 10px;
      background-color: #fff;
      transition: all 0.4s ease-in-out;
      box-shadow: 0 0 25px 0 rgba(20, 27, 202, 0.17);
    }

    .our-services .icon {
      margin-bottom: -21px;
      transform: translateY(-50%);
      text-align: center;
    }

    .our-services h4 {
      font-size: 3rem;
      font-weight: bold;
    }

    .our-services:hover h4,
    .our-services:hover p {
      color: #fff;
    }

    .speedup:hover {
      box-shadow: 0 0 25px 0 rgba(33, 39, 221, 0.2);
      cursor: pointer;
      background-image: linear-gradient(-45deg, #f33474 0%, #f55b2a 50%);
    }

    .settings:hover {
      box-shadow: 0 0 25px 0 rgba(20, 27, 201, 0.2);
      cursor: pointer;
      background-image: linear-gradient(-45deg, #49d0da 0%, #210c59 50%);
    }

    .privacy:hover {
      box-shadow: 0 0 25px 0 rgba(20, 27, 201, 0.2);
      cursor: pointer;
      background-image: linear-gradient(-45deg, #5035ec 0%, #44a2f6 50%);
    }

    .backups:hover {
      box-shadow: 0 0 25px 0 rgba(20, 27, 201, 0.2);
      cursor: pointer;
      background-image: linear-gradient(-45deg, #fd7f30 0%, #fdb642 50%);
    }

    .ssl:hover {
      box-shadow: 0 0 25px 0 rgba(20, 27, 201, 0.2);
      cursor: pointer;
      background-image: linear-gradient(-45deg, #974eff 0%, #5a57fb 50%);
    }

    .database:hover {
      box-shadow: 0 0 25px 0 rgba(20, 27, 201, 0.2);
      cursor: pointer;
      background-image: linear-gradient(-45deg, #27b88d 0%, #22dd73 50%);
    }
    img{
      width: 80px;
      height: 80px;
    }
  </style>

</head>

